{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["npm i"],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "npm i",
      "restartOn": {
        "files": ["package-lock.json"]
      }
    },
    "start-app": {
      "name": "Run Dev Server",
      "command": "npm run dev",
      "runAtStart": true
    }
  }
}
